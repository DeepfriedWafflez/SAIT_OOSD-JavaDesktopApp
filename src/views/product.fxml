<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ProductController">
   <children>
      <TabPane layoutY="43.0" prefHeight="358.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Products">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tvProducts" layoutX="14.0" layoutY="14.0" prefHeight="274.0" prefWidth="442.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Add Product">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="303.0" prefWidth="584.0">
                     <children>
                        <TextField layoutX="133.0" layoutY="48.0" />
                        <TextField layoutX="133.0" layoutY="92.0" />
                        <Label layoutX="30.0" layoutY="96.0" text="Product Name:">
                           <font>
                              <Font name="Malayalam MN" size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="30.0" layoutY="53.0" text="Poduct Id:">
                           <font>
                              <Font name="Malayalam MN" size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnAdd" layoutX="162.0" layoutY="145.0" mnemonicParsing="false" onAction="#btnAddAction" text="Add">
                           <font>
                              <Font name="Kefa Regular" size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnClear" layoutX="224.0" layoutY="145.0" mnemonicParsing="false" onAction="#btnClearAction" text="Clear">
                           <font>
                              <Font name="Kefa Regular" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Update Product">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="303.0" prefWidth="584.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="btnHome" layoutX="3.0" layoutY="4.0" mnemonicParsing="false" onAction="#btnHomeAction" prefHeight="35.0" prefWidth="76.0" text="Home">
         <font>
            <Font name="Malayalam MN" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
