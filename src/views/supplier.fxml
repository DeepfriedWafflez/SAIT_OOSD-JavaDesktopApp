<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.SupplierController">
   <children>
      <TabPane layoutY="50.0" prefHeight="350.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Suppliers">
               <content>
                  <TableView fx:id="tvSupplierList" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="colSupplierId" prefWidth="117.0" text="Supplier ID" />
                      <TableColumn fx:id="colSupplierName" minWidth="0.0" prefWidth="248.0" text="Supplier Name" />
                    </columns>
                  </TableView>
               </content>
          </Tab>
          <Tab text="Add Supplier">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="50.0" layoutY="48.0" prefHeight="30.0" prefWidth="99.0" text="Supplier Id" />
                        <Label layoutX="50.0" layoutY="103.0" prefHeight="30.0" prefWidth="99.0" text="Supplier Name" />
                        <TextField fx:id="tfSupplierIdAdd" layoutX="203.0" layoutY="51.0" />
                        <TextField fx:id="tfSupplierNameAdd" layoutX="203.0" layoutY="103.0" />
                        <Button fx:id="btnAddSupplier" layoutX="203.0" layoutY="170.0" mnemonicParsing="false" onAction="#btnAddSupplierAction" text="Add Supplier" />
                        <Button fx:id="btnClearAddSupplier" layoutX="203.0" layoutY="214.0" mnemonicParsing="false" onAction="#btnClearAddSupplierAction" text="Clear" />
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab text="Update Supplier">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="76.0" layoutY="93.0" prefHeight="30.0" prefWidth="99.0" text="Supplier Id" />
                        <Label layoutX="83.0" layoutY="140.0" prefHeight="30.0" prefWidth="99.0" text="Supplier Name" />
                        <TextField fx:id="tfSupplierIdUpdate" layoutX="201.0" layoutY="96.0" />
                        <TextField fx:id="tfSupplierNameUpdate" layoutX="201.0" layoutY="143.0" />
                        <Button fx:id="btnUpdateSupplier" layoutX="201.0" layoutY="203.0" mnemonicParsing="false" onAction="#btnUpdateSupplierAction" text="Update Supplier" />
                        <Button fx:id="btnClearUpdateSupplier" layoutX="201.0" layoutY="241.0" mnemonicParsing="false" onAction="#btnClearUpdateSupplierAction" text="Clear" />
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="btnHomeSupplier" mnemonicParsing="false" onAction="#btnHomeAction" text="Home">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
